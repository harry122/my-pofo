

<main role="main">
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        {{#each projects}}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="/images/caspar.jpg" alt="Nature" height="200px" width="100%">
            <div class="card-body">
              <h2>{{this.name}}</h2>
              <p class="card-text">{{this.description}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/projects/{{this.alias}}" class="btn btn-sm btn-outline-secondary">Details</a>
                  <a href="/{{this.githubUrl}}" class="btn btn-sm btn-outline-secondary">Github</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

</main>